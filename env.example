# ==========================================
# 应用基础配置 (App Configuration)
# ==========================================
APP_NAME=导师资料查询小程序后端
APP_ENVIRONMENT=development  # development, production, testing
PORT=8000
DEBUG=True

# ==========================================
# 数据库配置 (Database Configuration)
# ==========================================
# MongoDB连接字符串 (本地开发环境默认)
MONGO_URI=mongodb://localhost:27017/
# 生产环境示例 (需修改为实际地址)
# MONGO_URI=mongodb://username:password@xxx.mongodb.aliyuncs.com:27017/
DB_NAME=teacher_query

# ==========================================
# 安全配置 (Security Configuration)
# ==========================================
# JWT密钥 (务必修改，保持私密)
JWT_SECRET_KEY=change_this_to_a_secure_random_string_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS跨域配置 (逗号分隔)
# BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:3000"]

# ==========================================
# 日志配置 (Logging Configuration)
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_DIR=logs
LOG_ROTATION=size  # size 或 time
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==========================================
# 微信小程序配置 (WeChat Mini Program)
# ==========================================
WECHAT_APP_ID=your_wechat_appid
WECHAT_APP_SECRET=your_wechat_secret

# ==========================================
# 接口限流配置 (Rate Limiting)
# ==========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
